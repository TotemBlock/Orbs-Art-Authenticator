{
  "name": "Orbs Project",
  "version": "1.1",
  "description": "Build an Extension with Orbs!",
  "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
    },
  "manifest_version": 2,
  "browser_action": {
	"default_icon": "icon32.png",
	"default_title": "The Orbs Project",
	"default_popup": "popup.html"
},
  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["build/static/js/content.js"]
    }
]
}